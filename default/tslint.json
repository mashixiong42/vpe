{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "linterOptions": {
    "exclude": ["node_modules/**/*.ts"]
  },
  "jsRules": {},
  "rules": {
    "semicolon": false,
    "trailing-comma": false,
    "arrow-parens": [true, "ban-single-arg-parens"],
    "quotemark": [true, "single", "jsx-double"]
  },
  "rulesDirectory": []
}
